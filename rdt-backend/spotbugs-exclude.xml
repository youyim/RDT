<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Ignore static field assignment in MessageSourceHolder (Intentional for ApplicationContextAware pattern) -->
    <Match>
        <Class name="com.rdt.common.util.MessageSourceHolder" />
        <Bug pattern="ST_WRITE_TO_STATIC_FROM_INSTANCE_METHOD" />
    </Match>
    <!-- MeterRegistry is a Spring-managed singleton, safe to store reference -->
    <Match>
        <Class name="com.rdt.web.aspect.MonitoringAspect" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
    <Match>
        <Class name="com.rdt.config.SecurityConfig" />
        <Field name="jwtAuthenticationFilter" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
    <Match>
        <Class name="com.rdt.auth.component.JwtProvider" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
    <!-- Spring-managed Service beans are singletons, safe to store references -->
    <Match>
        <Class name="com.rdt.config.controller.MainSystemController" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
    <Match>
        <Class name="com.rdt.config.controller.SubSystemController" />
        <Bug pattern="EI_EXPOSE_REP2" />
    </Match>
</FindBugsFilter>
